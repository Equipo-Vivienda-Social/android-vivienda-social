<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/dwelling_detail_street"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Calle Mayor, 12"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/dwelling_detail_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciudad: Madrid"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/dwelling_detail_street"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/dwelling_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: Piso"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/dwelling_detail_city"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/dwelling_detail_rooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habitaciones: 3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/dwelling_detail_type"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/dwelling_detail_buildDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Construido: 2005-06-10"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/dwelling_detail_rooms"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/dwelling_detail_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disponible ðŸŸ¢"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/dwelling_detail_buildDate"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/button_edit_dwelling"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Editar âœï¸"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textSize="12sp"
            android:padding="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/dwelling_detail_available"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_delete_dwelling"
            app:layout_constraintWidth_percent="0.35"
            android:onClick="editDwelling"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_delete_dwelling"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Eliminar ðŸ—‘ï¸"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textSize="12sp"
            android:padding="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/dwelling_detail_available"
            app:layout_constraintStart_toEndOf="@id/button_edit_dwelling"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.35"
            android:onClick="deleteDwelling"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/applicant_detail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Juan PÃ©rez"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/applicant_detail_dni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DNI: 12345678A"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/applicant_detail_name"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/applicant_detail_birthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nacimiento: 1990-05-12"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/applicant_detail_dni"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/applicant_detail_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salario: 18000 â‚¬"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/applicant_detail_birthdate"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/applicant_detail_familyMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miembros familiares: 3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/applicant_detail_salary"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/applicant_detail_employed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empleado ðŸŸ¢"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/applicant_detail_familyMembers"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/button_edit_applicant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Editar âœï¸"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:padding="4dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/applicant_detail_employed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_delete_applicant"
            app:layout_constraintWidth_percent="0.35"
            android:layout_marginTop="8dp"
            android:onClick="editApplicant"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_delete_applicant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Eliminar ðŸ—‘ï¸"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_dark"
            android:padding="4dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/applicant_detail_employed"
            app:layout_constraintStart_toEndOf="@id/button_edit_applicant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.35"
            android:layout_marginTop="8dp"
            android:onClick="deleteApplicant"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
